<% if user_signed_in? %>
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if user_signed_in? && friend.user_id == current_user.id %>
        <tr>
          <td><%= link_to friend.name, friend %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.user_id %></td>
<!--          <td><%#= link_to 'Edit', edit_friend_path(friend) %></td>-->
          <td style=" text-align: center "><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
        </tr>
    <% end %>
    <%end %>
  </tbody>
</table>
<br>
  <%= link_to 'Add friend', new_friend_path ,class:"btn btn-secondary"%>
<% else %>
  <h1>Welcome</h1>
  <div><pre>This is HomePage</pre></div>

<%end %>